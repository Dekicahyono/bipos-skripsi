<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project.bipos">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".presentation.order_status.OrderStatusActivity"></activity>
        <activity android:name=".presentation.SearchActivity" />
        <activity android:name=".presentation.category_list.ProductListByCategoryActivity" />
        <activity android:name=".presentation.detail.purchase.PurchaseDetailActivity" />
        <activity android:name=".presentation.delivery.DeliveryActivity" />
        <activity android:name=".presentation.detail.product.ProductDetailsActivity" />
        <activity android:name=".presentation.register.RegisterActivity" />
        <activity android:name=".presentation.login.LoginActivity" />
        <activity android:name=".presentation.main.MainActivity" />
        <activity android:name=".SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>